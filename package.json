{
  "name": "cli-boilerplate",
  "version": "1.0.0",
  "description": "Minimalistic boilerplate to quick-start CLI development with Inquirer.js in TypeScript ðŸš€ ",
  "author": "Raja Rakotonirina <raja.rakoto7@gmail.com>",
  "license": "MIT",
  "type": "module",
  "module": "index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RajaRakoto/cli-boilerplate.git"
  },
  "bugs": "https://github.com/RajaRakoto/cli-boilerplate/issues",
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "inquirerjs",
    "inquirer",
    "minimalist",
    "boilerplate",
    "template",
    "starter"
  ],
  "engines": {
    "bun": ">= 1.0.0"
  },
  "scripts": {
    "start": "bun dist/index.js",
    "start:smol": "bun --smol dist/index.js",
    "clean": "rimraf build dist coverage",
    "dev:watch": "bun --watch run src/index.ts",
    "dev:hot": "bun --hot run src/index.ts",
    "dev:smol:watch": "bun --smol --watch run src/index.ts",
    "dev:smol:hot": "bun --smol --hot run src/index.ts",
    "build": "bun run build.js",
    "build:watch": "bun build src/index.ts --outdir dist --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "eslint": "eslint . --ext js,ts,js,mts --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --config .prettierrc --write .",
    "backup": "grunt backup",
    "pkg-check": "depcheck",
    "pkg-upgrade": "ncu --interactive --format group --packageManager bun",
    "versioning": "ungit",
    "version-major": "npm version major",
    "version-minor": "npm version minor",
    "version-patch": "npm version patch"
  },
  "dependencies": {
    "inquirer": "^9.2.15",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "bun-plugin-dts": "^0.2.1",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "grunt": "^1.6.1",
    "grunt-contrib-compress": "^2.0.0",
    "jest": "^29.7.0",
    "load-grunt-tasks": "^5.1.0",
    "npm-check-updates": "^16.14.15",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-api-utils": "^1.2.1",
    "ts-jest": "^29.1.2",
    "ungit": "^1.5.25"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
